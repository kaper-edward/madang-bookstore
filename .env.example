# MCP Server MySQL Configuration for Madang Bookstore
# Reference: https://github.com/benborla/mcp-server-mysql

# ============================================================================
# Core Database Connection Settings
# ============================================================================

# MySQL server hostname or IP address
MYSQL_HOST=localhost

# MySQL server port (default: 3306)
MYSQL_PORT=3306

# Database username
MYSQL_USER=madang

# Database password
MYSQL_PASS=madang

# Target database name
MYSQL_DB=madangdb

# Unix socket path (alternative to MYSQL_HOST, uncomment if needed)
# MYSQL_SOCKET_PATH=/var/run/mysqld/mysqld.sock


# ============================================================================
# Write Operation Permissions
# ============================================================================
# IMPORTANT: These are disabled by default for safety
# Enable only for educational/development environments

# Allow INSERT operations (required for creating orders)
ALLOW_INSERT_OPERATION=true

# Allow UPDATE operations (currently not used in this project)
ALLOW_UPDATE_OPERATION=false

# Allow DELETE operations (required for order cancellation)
ALLOW_DELETE_OPERATION=true


# ============================================================================
# Performance Configuration
# ============================================================================

# Connection pool size (number of concurrent connections)
MYSQL_POOL_SIZE=10

# Query execution timeout in milliseconds (30 seconds)
MYSQL_QUERY_TIMEOUT=30000

# Cache TTL (Time To Live) in milliseconds (1 minute)
MYSQL_CACHE_TTL=60000


# ============================================================================
# Security Configuration
# ============================================================================

# Rate limiting: max queries per minute
MYSQL_RATE_LIMIT=100

# Enable SSL/TLS connection (set to true for production)
MYSQL_SSL=false


# ============================================================================
# Logging and Monitoring
# ============================================================================

# Enable query logging
ENABLE_LOGGING=true

# Log level: error, warn, info, debug
MYSQL_LOG_LEVEL=info


